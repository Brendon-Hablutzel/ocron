{
  "name": "client",
  "version": "1.0.0",
  "description": "Crontab Language Server Client",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brendon-Hablutzel/ocron"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vsce": "^2.15.0"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:crontab"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.restartLanguageServer",
        "title": "Restart Crontab Language Server"
      }
    ],
    "languages": [
      {
        "id": "crontab",
        "filenames": [
          "crontab"
        ],
        "aliases": [
          "Crontab"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  }
}
